# Set default behavior to automatically normalize line endings
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# JSON files
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown files
*.md text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf

# Archives (treat as binary)
*.zip binary
*.tar.gz binary
*.tgz binary

# Images (treat as binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Exclude from exports
.gitignore export-ignore
.gitattributes export-ignore
.github export-ignore
tests/ export-ignore
